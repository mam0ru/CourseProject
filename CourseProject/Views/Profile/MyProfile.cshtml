@model CourseProject.Models.ApplicationUser
@{
    ViewBag.Title = "My Profile";
}

<div class="jumbotron">
    <div class="container">
        <br />
        <a href="~/Exercise/CreateExercise">Create Exercise</a>
        <table class="table table-striped table-hover ">
            @if (Model.Exercises != null)
            {
                <h3> @Resources.Resource.MyExercises</h3>
                foreach (var exersise in Model.Exercises)
                {
                    <tr>
                        <td><a href="~/Profile/MyProfile/@exersise.Id">@exersise.Name</a></td>
                        @{ string activeAction; }
                        @if (exersise.Active)
                        {
                            activeAction = "Make Unactive";
                        }
                        else
                        {
                            activeAction = "Make Active";
                        }
                        <td>@Html.ActionLink(activeAction, "MakeActiveUnactive", "Profile", new { id = exersise.Id, isActive = exersise.Active }, null)</td>
                        <td>@Html.ActionLink(activeAction, "AddAnswer", "Profile", new { id = exersise.Id }, null)</td>
                    </tr>
                }

            }
            else
            {
                <br />
                <thead>
                    @Resources.Resource.NoExercises
                </thead>
            }
        </table>

    </div>
</div>

<div class="jumbotron">
    <div class="container">
        <br />
        <table class="table table-striped table-hover ">
            <thead>
               <h3> @Resources.Resource.SolvedExercises</h3>
            </thead>
            <tbody>
                @if (Model.Exercises != null)
                {
                    foreach (var exersise in Model.RightAnswers)
                    {
                        <tr>
                            <td><a href="~/Profile/MyProfile/@exersise.Id">@exersise.Name</a></td>
                        </tr>
                    }
                }
                else
                {
                    <br/>
                <thead>
                    @Resources.Resource.NoRightAnsweredExercises
                </thead>
                }
                </tbody>
            </table>
        </div>
    </div>