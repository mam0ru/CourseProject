@model System.Linq.IOrderedEnumerable<CourseProject.Models.ApplicationUser>
@{
    ViewBag.Title = "Rating";
}.

<div class="jumbotron">
    <div class="container">
        <br />
        <table class="table table-striped table-hover ">
            @if (Model != null)
            {
                foreach (var user in Model)
                {
                    <tr>
                        <td><a href="~/Profile/ShowProfile/@user.Id">@user.UserName</a></td>
                    </tr>
                }

            }
            else
            {
                <br />
                <thead>
                    @Resources.Resource.NoRightAnsweredUsers
                </thead>
            }
        </table>

    </div>
</div>
