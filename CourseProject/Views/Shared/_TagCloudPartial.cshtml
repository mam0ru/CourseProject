@using CourseProject.Models
@model IEnumerable<CourseProject.Models.Tag>
<h3 style="color:#87CEFA">@Resources.Resource.Tags</h3>
<div>
    @if (Model.Count() != 0)
    {
        <ul>
            @foreach (Tag tag in Model)
            {
                <li>
                    @Html.ActionLink(tag.Text, "ShowExercisesWithTag", "Exercise", new { tag = tag.Text }, null)
                </li>
            }
        </ul>
    }
    else
    {
        @Resources.Resource.TagsListIsEmpty
    }
</div>
